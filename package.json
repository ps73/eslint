{
  "name": "@ps73/eslint-config",
  "version": "2.0.0-beta.1",
  "description": "Simple yet opinionated eslint setup for my projects.",
  "main": "index.js",
  "type": "module",
  "files": [
    "index.js",
    "prettier.json",
    "react.js",
    "package.json"
  ],
  "scripts": {
    "lint": "eslint --report-unused-disable-directives --cache .",
    "lint:fix": "npm run lint -- --fix",
    "git-hooks:commit-msg": "commitlint --edit",
    "git-hooks:pre-commit": "lint-staged",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ps73/eslint.git"
  },
  "keywords": [
    "Eslint",
    "Prettier",
    "React",
    "Node",
    "Typescript"
  ],
  "author": "Phil Schaffarzyk <phil.schaffarzyk@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ps73/eslint/issues"
  },
  "homepage": "https://github.com/ps73/eslint#readme",
  "dependencies": {
    "@babel/eslint-parser": "^7.24.1",
    "@eslint/js": "^9.29.0",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "eslint": "^9.29.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "prettier": "^3.5.3",
    "typescript-eslint": "^8.34.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.0.3",
    "@commitlint/config-conventional": "^19.0.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.1",
    "typescript": "^5.4.2"
  },
  "prettier": "./prettier.json",
  "engines": {
    "node": ">=20"
  }
}
